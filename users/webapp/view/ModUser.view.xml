<mvc:View controllerName="ns.users.controller.ModUser" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:l="sap.ui.layout"
          xmlns:f="sap.ui.layout.form"
          >
    <Page id="_IDGenPage1">
        <customHeader>
            <Bar id="_IDGenBar1">
                <contentLeft>
                    <Button id="_IDGenButton1" icon="sap-icon://nav-back" press="onBack"></Button>
                </contentLeft>
                <contentMiddle>
                    <Text id="_IDGenText1" text="{i18n>Username}  {DatosUser>Username}"></Text>
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <Panel id="_IDGenPanel1" headerText="{i18n>Username}: {DatosUser>Username}">
                <l:Grid id="_IDGenGrid1" defaultSpan="L6 M6 S12">
                    <f:Form id="_IDGenForm1" >
                        <f:layout>
                            <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1" labelSpanL="6" labelSpanM="6" labelSpanS="12"/>
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer id="_IDGenFormContainer1">
                                <f:formElements>
                                    <f:FormElement id="_IDGenFormElement1" label="{i18n>Username}">
                                        <f:fields>
                                            <Text id="_IDGenText2" text="{DatosUser>Address/Username}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement2" label="{i18n>Fullname}">
                                        <f:fields>
                                            <Text id="_IDGenText3" text="{oJSONModelUser>Fullname}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement3" label="{i18n>EMail}">
                                        <f:fields>
                                            <Text id="_IDGenText4" text="{DatosUser>Address/Fullname}"></Text>
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement id="_IDGenFormElement4" label="{i18n>Tel1Numbr}">
                                        <f:fields>
                                            <Text id="_IDGenText5" text="{DatosUser>Address/Tel1Numbr}"  ></Text>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>

                    
                </l:Grid>
                  
            </Panel>
 

            
        </content>

        <footer>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1"></ToolbarSpacer>
                <Button id="_IDGenButton3" text="{i18n>saveUser}" press="onSaveUser"></Button>
            </Toolbar>
        </footer>
        
    </Page>
</mvc:View>